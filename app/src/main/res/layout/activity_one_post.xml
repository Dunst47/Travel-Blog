<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lato"
    android:background="@drawable/gradient_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".OnePost">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#30007c91"
        android:padding="20dp"
        android:layout_margin="10dp"
        tools:context=".SinglePostActivity">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:background="@drawable/b"
            android:padding="5dp"
            android:id="@+id/singleImageview"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/singleTitle"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"
            android:background="#00007c91"
            android:text="Post Title"
            android:textColor="#100d0d"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/ad"
            android:text="Post Description"
            android:id="@+id/singleDesc"/>

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="delete post"
            android:background="#FFEA0404"
            android:textColor="#fff"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>