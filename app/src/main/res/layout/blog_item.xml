<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:backgroundTint="#0b007c91"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:background="#3b007c91"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/topPart"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/circular_bordershape">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="15dp">
                    <ImageView
                        android:id="@+id/userImage"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wood"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <TextView
                android:id="@+id/post_user"
                android:layout_toEndOf="@id/relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Username"
                android:textSize="18sp"
                android:fontFamily="serif"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>


        </RelativeLayout>
        <RelativeLayout
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/topPart"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:padding="15dp"
            >


            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="time"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/dateb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@id/time"
                android:text="date"
                android:textColor="@android:color/black" />



        </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/linear_layout_post"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:background="#1b007c91"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lnImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#20007c91"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/post_image"
                android:scaleType="centerCrop"/>

            </LinearLayout>>

            <TextView
                android:id="@+id/post_title_txtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:text="Post Title"/>

        </LinearLayout>

        <RelativeLayout
            android:background="#af0099cc"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/like_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:src="@drawable/dislike"/>
            <TextView
                android:id="@+id/likes_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:padding="5dp"
                android:text="0"
                android:textSize="14sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="14sp"
                android:id="@+id/likes"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Likes"
                />




        </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rel34"
                android:layout_toEndOf="@id/lin2"
                android:layout_alignParentEnd="true"
                android:gravity="center|right"
                >
                <TextView
                    android:paddingEnd="20dp"
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="5dp"
                    android:text="Some place"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />

            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>