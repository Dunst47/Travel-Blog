<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout tools:context=".SetupActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.Toolbar android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/toolbarSetup" android:background="@color/colorPrimary"/>

    <ProgressBar android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/setprogbar" android:layout_below="@id/toolbarSetup" android:indeterminate="true" android:visibility="invisible" style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    <de.hdodenhof.circleimageview.CircleImageView android:layout_height="150dp" android:layout_width="150dp" android:id="@+id/circle" android:layout_below="@id/toolbarSetup" app:civ_border_color="@color/colorPrimary" app:civ_border_width="2dp" android:src="@drawable/def6" android:layout_centerHorizontal="true" android:layout_marginTop="30dp"/>

    <EditText android:layout_height="48dp" android:layout_width="match_parent" android:id="@+id/names" android:background="@drawable/btn" android:layout_below="@id/circle" android:layout_marginTop="50dp" android:inputType="text" android:layout_marginStart="50dp" android:layout_marginEnd="50dp" android:autofillHints="" android:textColorHint="#80ffffff" android:hint="@string/enter_name" android:layout_gravity="center" android:textColor="@android:color/white" android:padding="8dp"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/saveChanges" android:background="@drawable/e" android:layout_below="@id/names" android:layout_marginTop="80dp" android:layout_marginStart="50dp" android:layout_marginEnd="50dp" android:textColor="#80ffffff" android:shadowRadius="5" android:elevation="4dp" android:focusable="true" android:textSize="20sp" android:text="@string/save"/>

</RelativeLayout>